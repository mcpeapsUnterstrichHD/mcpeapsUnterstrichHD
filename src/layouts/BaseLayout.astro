---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import CookieBanner from '../components/CookieBanner.astro';
import presentation from "../data/presentation";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;

import { ThemeSwitch } from "astro-color-scheme";

import Swup from 'swup';
---

<!DOCTYPE html>
<html lang="de" class="black" data-theme="black">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script>import Swup from "swup";

      const swup = new Swup();
    </script>
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} class="base-content glass" />
        
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
            <CookieBanner class="glass" />
            <slot />
          </main>
        </div>
        <div class="divider my-0"></div>
        <Footer class="glass" />
      </div>
      {includeSidebar && <SideBar class="" sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>