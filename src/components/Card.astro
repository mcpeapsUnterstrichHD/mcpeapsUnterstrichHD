---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";

import { Skeleton } from "../components/ui/skeleton"
const { sideBarActiveItemID } = Astro.props;
import { Skeleton } from "../components/ui/skeleton"


let isLoading = true;

function handleImageLoad() {
  isLoading = false;
}
---

<div class="md:w-1/3 w-full">
  <a href={url} target={target}>
    <div class="card bg-base-100 transition ease-in-out hover:shadow-xl mx-6 my-2 hover:scale-[102%]">
      <astro-if test={isLoading}>
        <Skeleton class="w-[750px] h-[422px] rounded-full" />
      </astro-if>
      <Image width={750} height={422} format="webp" src={img} alt={title} on:load={handleImageLoad} />
      <div class="card-body">
        <h2 class="card-title">
          {title}
          {badge && <div class="badge badge-secondary">{badge}</div>}
        </h2>
        <p>{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge badge-outline">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>

